{% extends 'base.html.twig' %}

{% block body %}
<h1>Welcome on our new blog !</h1>
<p><small>It's made with Symfony 5</small></p>

{% for post in posts %}
    <div class="card">
        <h2 class="card-title">{{ post.title }}</h2>
        <p class="card-content">{{ post.content }}</p>
    </div>
{% endfor %}
{% endblock %}
