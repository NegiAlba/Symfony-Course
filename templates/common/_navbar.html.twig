<header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
      {# Utilisation de app.user de Twig pour accéder au token de session de l'utilisateur connecté #}
        {% if app.user %}
          <a class="link-secondary btn btn-sm btn-outline-info" href="{{ path("app_post_create") }}">Create a post as {{ app.user }}</a>
        {% else %}
          <a class="link-secondary" href=" {{ path("app_register") }}">Sign up</a>
        {% endif %}
      </div>
      <div class="col-4 text-center">
        <a class="blog-header-logo text-dark" href=" {{ path("app_home") }}">Symfony Blog 2021</a>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <a class="btn btn-sm btn-outline-secondary" href="#">Contact</a>
        {% if app.user %}
          <a class="btn btn-sm btn-outline-danger" href="{{ path("app_logout") }}">Log out</a>
        {% else %}
          <a class="btn btn-sm btn-outline-secondary" href="{{ path("app_login") }}">Log in</a>
        {% endif %}
      </div>
    </div>
  </header>